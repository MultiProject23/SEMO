<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.shop.product.mapper.ProductMapper">

    <select id="findProductById" parameterType="Long" resultType="ProductVO">
        SELECT *
        FROM product
        WHERE id = #{productId}
    </select>

    <select id="findRelatedProductsByCategory" parameterType="Category" resultType="ProductDAO">
        SELECT *
        FROM product
        WHERE category = #{category}
    </select>
</mapper>